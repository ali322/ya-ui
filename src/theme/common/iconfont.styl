@import "./variable";
@import "./util";

$eot = $assetPath + 'font/fontello.eot'
$eotIEFix = $assetPath + 'font/fontello.eot?#iefix'
$woff = $assetPath + "font/fontello.woff"
$ttf = $assetPath + "font/fontello.ttf"
$svg = $assetPath + "font/fontello.svg#iconfont"

@font-face {font-family: "iconfont";
  src: url($eot);
  src: url($eotIEFix) format('embedded-opentype'),
  url($woff) format('woff'),
  url($ttf) format('truetype'),
  url($svg) format('svg');
}

.iconfont {
  font-family:"iconfont" !important;
  px2px("font-size",16);
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale;
}
