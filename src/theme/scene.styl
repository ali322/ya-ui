.scene-group{
    // position:relative;
    width:100%;
    height:100%;
    overflow:hidden;
    .scene-group-inner{
        height:100%;
        width:100%;
        &>.scene{
            width:100%;
            height:100%;
            overflow:hidden;
            position:absolute;
            left:0;
            top:0;
            z-index:1000;
            background:#FFF;
            // opacity:0;
            transform:translate3d(0,0,0)
            display:none;
            box-shadow:0 px2rem(2) px2rem(2) 0 rgba(0,0,0,.14),
            0 px2rem(3) px2rem(1) px2rem(-2) rgba(0,0,0,.2),
            0 px2rem(1) px2rem(5) 0 rgba(0,0,0,.12);
            // -webkit-backface-visibility: hidden;
            &.scrollable{
                overflow-x:hidden;
                overflow-y:auto;
                -webkit-overflow-scrolling: touch;
            }
            &.prev{
                // opacity:0.3;
            }
            &.active{
                z-index:1002;
                display:block;
            }
        }
    }
}

@keyframes fade-in{
    from{
        opacity:0.7
    }
    to{
        opacity:1
    }
}
@keyframes rightToLeft{
    from{
        transform:translate3d(-100%,0,0)
    }
    to{
        transform:translate3d(0,0,0)
    }
}
@keyframes leftToRight{
    from{
        transform:translate3d(100%,0,0)
    }
    to{
        transform:translate3d(0,0,0)
    }
}