@import "./common/common";
@import "./common/util";
.number-picker {
    display:flex;
    justify-content:center;
    align-items:center;
    &>div {
        font-size:px2rem(14);
        padding: 0 px2rem(10);
        border: px2rem(1) solid #AAA;
        cursor: pointer;
        line-height: px2rem(30);
        height: px2rem(30);
        display: inline-block;
        box-sizing:content-box;
        &:first-child {
            border-top-left-radius: px2rem(4);
            border-bottom-left-radius: px2rem(4);
        }
        &:last-child {
            border-top-right-radius: px2rem(4);
            border-bottom-right-radius: px2rem(4);
        }
    }
    &>input {
        border-color: #999;
        border-style: solid;
        border-width: px2rem(1) 0;
        width: px2rem(50);
        line-height: px2rem(30);
        padding: 0;
        text-align: center;
        border-radius: 0;
        box-sizing:border-box;
    }
}
