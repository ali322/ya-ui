@import "./common/common";
@import "./common/util";
.slide-tabs{
    display:flex;
    justify-content:center;
    align-items:flex-start;
    overflow:hidden;
    box-sizing:border-box;
    height:100%;
    .slide-tabs-navbar{
        width:200%;
        background-color:#f3f4f6;
        border-bottom:px2rem(1) solid #E0E0E0;
        // clear:both;
        .slide-tabs-navbar-item{
            display:table-cell;
            // float:left;
            width:px2rem(120);
            // display:inline-block;
            line-height:px2rem(50);
            border-left:px2rem(1) solid #E0E0E0;
            text-align:center;
            a{
                text-decoration:none;
            }
        }
    }
    .slide-tabs-content{
        flex:1
        width:600%;
        display:flex
        .slide-tabs-item{
            border-left:px2rem(1) solid #E0E0E0;
            // display:table-cell;
            // width:100%;
            flex:1;
        }
    }
}