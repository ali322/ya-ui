@import "../../common/example";
@import "../../common/md";
.form-example{
    font-size:px2rem(14);
    .md-card{
        padding:px2rem(10) px2rem(8);
        margin:0 px2rem(5);
        p>b{
            padding:0 px2rem(10);
        }
    }
}
.form-row{
    padding:px2rem(8) px2rem(10)
    max-width:px2rem(320)
    display:flex
    justify-content:center
    align-items:center
    &>label{
        width:30%;
        padding-right:px2rem(5);
    }
    &>div{
        width:70%;
        padding:0 0 0 px2rem(1);
    }
    .form-row-radio{
        display:flex;
        justify-content:flex-start;
        align-items:center;
        b{
            padding:0 px2rem(10) 0 px2rem(2);
            line-height:px2rem(20);
        }
    }
}
